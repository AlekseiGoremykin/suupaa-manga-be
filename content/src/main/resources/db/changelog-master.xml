<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!--   TODO Drop on dev env only    -->

    <include file="/db/changelog-cleanup.xml"/>

    <changeSet id="manga_tables" author="dev" runAlways="true">
        <validCheckSum>ANY</validCheckSum>
        <createTable tableName="manga">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="nvarchar"/>
            <column name="genre" type="nvarchar"/>
        </createTable>
        <createSequence sequenceName="seq_manga_pk"/>

        <createTable tableName="chapter">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="team_id" type="bigint"/>
            <column name="manga_id" type="bigint">
                <constraints referencedTableName="manga" referencedColumnNames="id"
                             foreignKeyName="fk_chapter_to_manga"/>
            </column>
            <column name="name" type="nvarchar"/>
        </createTable>
        <createSequence sequenceName="seq_chapter_pk"/>

        <createTable tableName="image">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="image" type="blob"/>
        </createTable>
        <createSequence sequenceName="seq_image_pk"/>

        <createTable tableName="page">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="chapter_id" type="bigint">
                <constraints referencedTableName="chapter" referencedColumnNames="id"
                             foreignKeyName="fk_page_to_chapter"/>
            </column>
            <column name="name" type="nvarchar"/>
            <column name="image_id" type="bigint">
                <constraints referencedTableName="image" referencedColumnNames="id"
                             foreignKeyName="fk_page_to_image"/>
            </column>
        </createTable>
        <createSequence sequenceName="seq_page_pk"/>
    </changeSet>

    <changeSet id="test_data" author="dev" runAlways="true">
        <validCheckSum>ANY</validCheckSum>
        <sqlFile path="/import.sql"/>
    </changeSet>
</databaseChangeLog>